// Custom Property Card Widget - Simplified Version
class PropertyCard extends StatelessWidget {
  final Property property;
  final VoidCallback onTap;

  const PropertyCard({
    Key? key,
    required this.property,
    required this.onTap,
  }) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return Card(
      elevation: 4,
      child: InkWell(
        onTap: onTap,
        child: Column(
          children: [
            // Image container
            Container(
              height: 200,
              decoration: BoxDecoration(
                borderRadius: BorderRadius.circular(8),
              ),
              child: // Image widget implementation
            ),
            // Property details
            Padding(
              padding: const EdgeInsets.all(16),
              child: Column(
                children: [
                  // Title, price, location etc.
                ],
              ),
            ),
          ],
        ),
      ),
    );
  }
}
